<div class="row">
  {{log "test"}}
  <div class="col-4">
    <ul class="list-group">
    {{#each burger}}
      {{#unless this.devoured}}  
      <h4>{{this.burger_name}}</h4>
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
   <form>
      <div class="form-group">
        <input class="form-control" type="text" id="burger-input" placeholder="Name your burger here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    <ul class="list-group">
      {{#each burger}}
        {{#if this.devoured}}
        <h4>{{this.burger_name}}</h4>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

 