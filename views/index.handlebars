<div class="row">
  <div class="col-4">
    {{> section-title title="Burgers that have not been devoured"}}
    <ul class="list-group">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger status="Not devoured"}}
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
   <form>
      {{> section-title title="Eat a Burger"}}
      <div class="form-group">
        <input class="form-control" type="text" id="burger-input" placeholder="Name your burger here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    {{> section-title title="devoured burgers"}}
    <ul class="list-group">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger status="devoured"}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

 